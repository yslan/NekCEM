
c...   Variables for density matrix approach for solving quantum systems

       integer    numqd,numsp,nstate,nrho,neqn,nEh,nqstep
       parameter (numqd   = 2      )       ! number of surface plasmon
       parameter (numsp   = 3      )       ! number of surface plasmon
       parameter (nstate  = numqd*numsp)   ! number of state
       parameter (nrho    = nstate*nstate) ! number of rho
       parameter (neqn    = 2*nrho )       ! number of eqns: real/imag
       parameter (nEh     = 50     )       ! number of energy    
       parameter (nqstep  = 5      )       ! number of substep   


       common /QPRAMR/ timemax, Emin, Emax, dEh, relerr, abserr
     $               , timeunit,rintensity,energy0,eV,debye
     $               , omega_s,gamma_s,s_mu
     $               , omega_q,gamma_q,q_mu,gamma_d,qradius,g_couple            

       real            timemax, Emin, Emax, dEh, relerr, abserr
     $               , timeunit,rintensity,energy0,eV,debye
     $               , omega_s,gamma_s,s_mu
     $               , omega_q,gamma_q,q_mu,gamma_d,qradius,g_couple            

       common /QPRAMI/ isstate (nrho)
     $               , iqstate (nrho)
       integer         isstate,iqstate

       common /QPRAMV/ hamilt_0 (nstate,nstate)
     $               , hamilt   (nstate,nstate)
     $               , hamilt_I (nstate,nstate)
       real            hamilt_0,hamilt,hamilt_I


