{
    "unix-mpi": {
	"FC": "mpif77",
	"FFLAGS": ["I.", "O3", "DMPIIO", "DNO_C_MAIN",
		   "fdefault-real-8", "fdefault-double-8"],
	"CC": "mpicc",
	"CFLAGS": ["I.", "O3", "DMPIIO", "DMPI", "DMPISRC",
		   "DLONGINT8", "DNO_C_MAIN", "DUNDERSCORE",
		   "DGLOBAL_LONG_LONG"],
