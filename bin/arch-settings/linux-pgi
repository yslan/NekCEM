export COMM_BACKEND=comm_seq
export IO_BACKEND=vtkbin_dummy
FORTRAN_DEFINES="-DNO_C_MAIN $FORTRAN_DEFINES"
C_DEFINES="-Dr8 -DNO_C_MAIN $C_DEFINES"
export F77="pgf77 -Mprof=func -Ktrap=fp \
  -I$BASEDIR/examples/include \
  -I$BASEDIR/src \
  $FORTRAN_DEFINES"
export CC="pgcc -Mprof=func -Ktrap=fp $C_DEFINES"
export P="-r8"
export EXTRALIBS=""
export LAPACK=" -llapack -lblas "
export LD="pgf77 -Mprof=func -Ktrap=fp "
OPT_FULL="-O3 -Minline -Minform=warn"
OPT_DEBUG="-g -O0 -Minform=warn"
MAKE=make
