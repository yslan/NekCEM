# mangle FORTRAN_DEFINES for IBM ----------------------------------

#
export COMM_BACKEND=comm_mpi2
export IO_BACKEND="io.o rbIO_nekcem.o vtkbin.o coIO_nekcem.o coIO_nekcem_read.o io_util.o mpiio_util.o io_driver.o"

#UNDERSCORE is added to avoid compilation error for the case #of jl2 (vs. liftn) -- complaining for redefined function.
C_DEFINES="-Dr8 -DPTRSIZE8 -DMPIIO -DMPI -DMPISRC -DLONGINT8 -DNO_C_MAIN -DUNDERSCORE -DGLOBAL_LONG_LONG $C_DEFINES"
CXX_DEFINES="-DMPICH_IGNORE_CXX_SEEK"
FORTRAN_DEFINES="-DMPIIO -DNO_C_MAIN $FORTRAN_DEFINES"

export F77="mpif77 -I$BASEDIR/examples/include  -I$BASEDIR/src  $FORTRAN_DEFINES"
export CC="mpicc $C_DEFINES"
#export CXX="mpicxx $CXX_DEFINES "
#export P="-fdefault-real-8" # this is a gfortran flag and is not valid for pgf77
export P="-r8"

export EXTRALIBS=""
export LAPACK="-llapack -lblas "
export LD="mpif77 "
OPT_FULL="-O3"
OPT_DEBUG=""

export HPMFLAGS=""
export ARPACKLIBDIR=""
export ARPACKLIB=""

MAKE=make

