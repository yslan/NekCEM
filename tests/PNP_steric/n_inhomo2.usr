      subroutine usrdat2
      include 'SIZE'
      include 'TOTAL'

      real rscale
      real xmin,ymin,zmin,xmax,ymax,zmax
      real pdat(6000,5)

      xmin = glmin(xm1,npts)
      xmax = glmax(xm1,npts)
      ymin = glmin(ym1,npts)
      ymax = glmax(ym1,npts)
      zmin = glmin(zm1,npts)
      zmax = glmax(zm1,npts)

      sx = 0.6/(xmax-xmin)
      sy = 0.6/(ymax-ymin)
      sz = 2.0/(zmax-zmin)

      do i = 1,npts
         xm1(i,1,1,1) = sx*(xm1(i,1,1,1)-xmin)-0.3
         ym1(i,1,1,1) = sy*(ym1(i,1,1,1)-ymin)-0.3
         zm1(i,1,1,1) = sz*(zm1(i,1,1,1)-zmin)-1
      enddo

      return
      end
