c-----------------------------------------------------------------------
      subroutine userini(tt,hx,hy,hz,ex,ey,ez)
c-----------------------------------------------------------------------
      implicit none
      include 'SIZE'
      include 'TOTAL'
      include 'POISSON'

      real tt
      real hx(lpts),hy(lpts),hz(lpts)
      real ex(lpts),ey(lpts),ez(lpts)

      real xx,yy,zz
      real errmax,glamax
      integer i

      do i = 1,npts
         xx = xm1(i,1,1,1)
         yy = ym1(i,1,1,1)
         zz = zm1(i,1,1,1)
         charge(i) = 2*((1-yy**2)*(1-zz**2)
     $                 +(1-xx**2)*(1-zz**2)
     $                 +(1-xx**2)*(1-yy**2))
         spotent(i) = (1-xx**2)*(1-yy**2)*(1-zz**2)
      enddo

      if (nid.eq.0) write(6,*) 'poisson: set charge in userini'
      call poissonq (ex,ey,ez,potent,npts)
      call sub3(epotent,spotent,potent,npts)

      errmax = glamax(epotent,npts)
      if (nid.eq.0) write(6,*) 'poisson: potent_maxerr=',errmax

      call cem_grad(ex,ey,ez,potent)
      call chsign(ex,npts)
      call chsign(ey,npts)
      call chsign(ez,npts)

      return
      end
c-----------------------------------------------------------------------
      subroutine usersol(tt,solhx,solhy,solhz,solex,soley,solez)
c-----------------------------------------------------------------------
      implicit none
      include 'SIZE'
      include 'TOTAL'
      include 'EMWAVE'

      real tt
      real solhx(lpts),solhy(lpts),solhz(lpts)
      real solex(lpts),soley(lpts),solez(lpts)

      real theta
      real xx,yy,zz,rr,ee1,ee2,ee3
      real glmax,glmin,xmax,xmin,ymax,ymin,zmax,zmin
      integer i

      do i = 1,npts
         xx = xm1(i,1,1,1)
         yy = ym1(i,1,1,1)
         zz = zm1(i,1,1,1)
         rr = xx**2+yy**2
         rr = sqrt(rr)
         theta= atan2(yy,xx)

         ee1 = -2*rr*cos(zz)
         ee2 = 0
         ee3 = (rr**2-1)*sin(zz)

         solhx(i) = 0
         solhy(i) = 0
         solhz(i) = 0

         solex(i) = 2*xx*(1-yy**2)*(1-zz**2)
         soley(i) = 2*yy*(1-xx**2)*(1-zz**2)
         solez(i) = 2*zz*(1-xx**2)*(1-yy**2)
      enddo

      return
      end
